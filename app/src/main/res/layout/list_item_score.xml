<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50sp"
    android:background="@drawable/input_block">

    <ImageView
        android:layout_width="50sp"
        android:layout_height="30sp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/icon_square_straight"
        android:contentDescription="ranking_num_box" />

    <TextView
        android:id="@+id/list_item_rank"
        android:layout_width="50sp"
        android:layout_height="30sp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="1"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50sp"
        android:layout_marginEnd="100sp"
        android:layout_gravity="center_vertical"
        android:textSize="15sp"
        android:text="가가가가가가가가가가가가가가가"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/list_item_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="center_horizontal"
        android:text="1400000"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:translationX="-20sp"
        android:translationY="10sp" />

</FrameLayout>